---
import "../styles/global.scss";
---

<script type="module">
  const menuToggle = document.querySelector(".menu-toggle");
  const nav = document.querySelector(".nav");

  menuToggle.addEventListener("click", function () {
    nav.classList.toggle("mobile-nav");
    this.classList.toggle("is-active");
  });

  nav.addEventListener("click", function () {
    if (event.target.tagName === "A") {
      nav.classList.toggle("mobile-nav");
      menuToggle.classList.toggle("is-active");
    }
  });
</script>

<header>
  <nav class="navbar" id="navigation">
    <div class="logo">
      <h1>
        <a href="/">
          <span aria-hidden="true"></span>Pobi Casaul
        </a>
      </h1>
    </div>
    <div class="menu-toggle" id="mobile-menu">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </div>
    <ul class="nav menu-left">
      <li class="nav-item">
        <button class="cta">
          <span class="hover-underline-animation">
            <a href="/#project">Project</a>
          </span>
        </button>
      </li>
      <li class="nav-item">
        <button class="cta">
          <span class="hover-underline-animation">
            <a href="/#about">About</a>
          </span>
        </button>
      </li>
      <li class="nav-item">
        <button class="cta">
          <span class="hover-underline-animation">
            <a href="/#contact">Contact</a>
          </span>
        </button>
      </li>
      <li class="nav-item">
        <button class="cta">
          <span class="hover-underline-animation">
            <a href="https://github.com/pobicasaul19" target="_blank">GitHub</a>
          </span>
        </button>
      </li>
      <li class="nav-item">
        <button class="button">
          <a
            href="https://drive.google.com/file/d/12Z7I2_8ered0yP72oQIN-8D-FQBqm2dY/view?usp=sharing"
            target="_blank">Resume</a
          >
        </button>
      </li>
    </ul>
  </nav>
  <hr />
</header>

<style lang="scss" scoped>
  $white: #f7f8fa;
  $black: #171321;
  $color-gray-900: #1f2028;
  $mono: "Oxygen mono", monospace;
  $sans: Oxygen, sans-serif;
  $transition-easing: cubic-bezier(0.5, 0, 0.5, 1);
  $animation-duration: 0.8s;

  header {
    z-index: 1;
    flex-grow: 1;
    position: sticky;
    top: 0;
    width: 100%;
    background-color: $color-gray-900;
    animation: slide-up $animation-duration $transition-easing;

    .navbar {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      align-items: center;
      height: 100px;
      overflow: hidden;
      gap: 1rem;
      justify-content: space-between;

      .logo {
        justify-self: start;
        height: 100%;
        padding: 1rem 5rem;
        font-family: $sans;

        a {
          text-decoration: none;
          color: $white;
        }
      }

      .nav-item {
        .cta {
          border: none;
          background: none;

          span {
            padding-bottom: 7px;
            letter-spacing: 4px;
            font-size: 14px;
            text-transform: uppercase;
          }

          .hover-underline-animation {
            position: relative;
            color: $white;

            &:after {
              content: "";
              position: absolute;
              width: 100%;
              transform: scaleX(0);
              height: 2px;
              bottom: 0;
              left: 0;
              background-color: $white;
              transform-origin: bottom right;
              transition: transform 0.25s ease-out;
            }
          }

          &:hover {
            .hover-underline-animation:after {
              transform: scaleX(1);
              transform-origin: bottom left;
            }
          }
        }

        a {
          text-decoration: none;
          color: $white;
          font-weight: 400;
          transition: color 0.3s ease-out;
          font-family: $mono;

          &:hover {
            color: $white;
          }
        }

        .button {
          width: 6.5em;
          height: 2.5em;
          background: $color-gray-900;
          border: none;
          border-radius: 0.625em;
          cursor: pointer;
          position: relative;
          z-index: 1;
          overflow: hidden;
          font-size: 14px;
          text-transform: uppercase;
          font-family: $mono;
          letter-spacing: 4px;

          a {
            text-decoration: none;
            color: $white;

            &:hover {
              color: $black !important;
            }
          }

          &:after {
            content: "";
            background: $white;
            position: absolute;
            z-index: -1;
            left: -20%;
            right: -20%;
            top: 0;
            bottom: 0;
            transform: skewX(-45deg) scale(0, 1);
            transition: all 0.5s;
          }

          &:hover::after {
            transform: skewX(-45deg) scale(1, 1);
            -webkit-transition: all 0.5s;
            transition: all 0.5s;
          }
        }
      }

      .menu-toggle {
        justify-self: end;
        margin-right: 30px;
        display: none;
      }

      .menu-toggle .bar {
        height: 2.5px;
        background-color: $white;
        margin: 5px auto;
        transition: all 0.3s ease-in-out;
        -webkit-transition: all 0.3s ease-in-out;
        -o-transition: all 0.3s ease-in-out;
        justify-self: end;

        &:first-child {
          width: 15px;
          margin-right: 1px;
        }

        &:nth-child(2) {
          width: 24px;
        }

        &:last-child {
          width: 10px;
          margin-right: 1px;
        }
      }

      .menu-toggle.is-active .bar:nth-child(2) {
        opacity: 0;
      }

      #mobile-menu.is-active .bar:nth-child(1) {
        transform: translateY(10px) rotate(45deg);
        -webkit-transform: translateY(10px) rotate(45deg);
        -o-transform: translateY(10px) rotate(45deg);
        -ms-transform: translateY(10px) rotate(45deg);
        width: 24px;
        opacity: 0.7;
      }

      #mobile-menu.is-active .bar:nth-child(3) {
        transform: translateY(-12px) rotate(-45deg);
        -webkit-transform: translateY(-5px) rotate(-45deg);
        -o-transform: translateY(-8px) rotate(-45deg);
        -ms-transform: translateY(-8px) rotate(-45deg);
        width: 24px;
        opacity: 0.7;
      }
    }

    @keyframes slide-up {
      from {
        opacity: 0;
        transform: translateY(100%);
      }

      to {
        opacity: 1;
        transform: none;
      }
    }
  }

  @media screen and (max-width: 799px) {
    .navbar {
      display: flex !important;
      justify-content: space-between;
      align-items: center;
      padding: 0 1rem;
      position: sticky;
      top: 0;
      left: 0;
      width: 100%;
      height: 55px;
      z-index: 1000;
      margin-top: 1rem;

      .logo {
        height: auto;
        margin: 0;
        padding: 0;

        a {
          width: auto;
          margin: 0 auto;
        }
      }

      .menu-left {
        display: flex;
        flex-direction: column;
        position: fixed;
        justify-content: start;
        top: 100px;
        width: 100%;
        height: calc(50vh - 55px);
        transform: translate(-100%);
        text-align: start !important;
        overflow: hidden;
        margin: 0;
        background-color: $color-gray-900;
        transition: 0.9s ease;
        left: 0;

        .nav-item {
          padding: 15px;

          a {
            font-size: 1rem;
          }
        }
      }
    }

    .menu-toggle,
    .bar {
      display: block !important;
      cursor: pointer;
      transition: 1s ease;
    }

    .mobile-nav {
      transform: translate(0%) !important;
    }
  }

  @media (min-width: 800px) and (max-width: 1200px) {
    .navbar {
      display: flex !important;
      position: static;
      justify-content: center !important;
      align-items: center !important;
      height: 100% !important;

      .menu-left {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        gap: 2rem;
        font-family: $mono;
      }
    }
  }

  @media (min-width: 1201px) {
    .navbar {
      display: flex;
      position: static;
      height: 100%;
      margin: auto;
      overflow: auto;
      transform: translateY(0);

      .menu-left {
        display: flex;
        gap: 2rem;
        list-style: none;
        font-family: $mono;
        margin: 0 3rem;
        text-align: center;
        align-items: center;
      }
    }
  }
</style>
